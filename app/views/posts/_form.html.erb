<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> Prevent from your saving.</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control", placeholder: "Post title" %>
	</div>
	
	<div class="form-group">
		<%= f.label :tag %>
		<%= f.text_field :tag, class: "form-control", placeholder: "Tag" %>
	</div>
	<div class="form-group">
		<%= f.label :content %> 
		<%= f.text_area :content, class: "form-control", placeholder: "Post content" %>
	</div>
	<%= f.submit class: "btn btn-info" %>
<% end %>