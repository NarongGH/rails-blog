<h3><%= @post.title %></h3>
<div>
	<small>Tag: <%= @post.tag %></small>
</div>
<div>
	<p><%= @post.content %></p>
</div>
<%= link_to "Edit post", edit_post_path(@post), class: "btn btn-sm btn-success" %>
<%= link_to "Delete post", post_path(@post), method: :delete, data: {confirm: 'are you sure?'}, class: "btn btn-sm btn-danger" %>